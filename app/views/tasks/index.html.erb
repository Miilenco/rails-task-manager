<h1>My tasks</h1>

<ul class="list-group my-2">
  <% @tasks.each do |task| %>
    <li class="list-group-item">
      <%= link_to "#{task.completed ? '<i class="fa-regular fa-square-check"></i>' : '<i class="fa-regular fa-square"></i>'} #{task.title}".html_safe,
       task_path(task) %>
        -
      <%= link_to '❌', task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "<i class='fa-solid fa-plus'></i> Add a new task".html_safe, tasks_new_path %>
